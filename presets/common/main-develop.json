{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "p3ol/renovate-presets//presets/common/base"
  ],
  "baseBranchPatterns": [
    "main",
    "develop"
  ],
  "packageRules": [{
    "matchFileNames": [".github/workflows/*.yml", "!.github/workflows/cd.yml"],
    "matchBaseBranches": ["develop"],
    "enabled": false
  }, {
    "matchFileNames": [".github/workflows/cd.yml"],
    "matchBaseBranches": ["main"],
    "enabled": false
  }, {
    "matchManagers": ["dockerfile", "helm-values", "helmv3"],
    "matchBaseBranches": ["main"],
    "enabled": false
  }, {
    "description": "Disable all node-related updates on main branch",
    "matchDepNames": ["node"], // CI + CD
    "matchPackageNames": ["node"], // package.json 'engines' field
    "matchBaseBranches": ["main"],
    "enabled": false
  }, {
    "groupName": "bump all Node-related updates",
    "description": "Push all node-related updates on develop branch",
    "matchDepNames": ["node"], // CI + CD
    "matchPackageNames": ["node"], // package.json 'engines' field
    "matchBaseBranches": ["develop"],
    "enabled": true
  }]
}
