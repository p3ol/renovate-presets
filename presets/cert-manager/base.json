{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [{
    "customType": "regex",
    "managerFilePatterns": ["script?(s)/*cert-manager*"],
    "matchStrings": [
      "cert_manager_version=\"(?<currentValue>v[^\"]+)\""
    ],
    "depNameTemplate": "cert-manager",
    "datasourceTemplate": "docker",
    "registryUrlTemplate": "quay.io/jetstack/charts",
    "versioningTemplate": "semver"
  }, {
    "customType": "regex",
    "managerFilePatterns": ["script?(s)/*cert-manager*"],
    "matchStrings": [
      "origin_ca_issuer_version=\"(?<currentValue>v[^\"]+)\""
    ],
    "depNameTemplate": "cloudflare/origin-ca-issuer",
    "datasourceTemplate": "github-releases",
    "versioningTemplate": "semver"
  }, {
    "customType": "regex",
    "managerFilePatterns": ["script?(s)/*cert-manager*"],
    "matchStrings": [
      "origin_ca_issuer_chart_version=\"(?<currentValue>[^\"]+)\""
    ],
    "depNameTemplate": "origin-ca-issuer",
    "datasourceTemplate": "docker",
    "registryUrlTemplate": "ghcr.io/cloudflare/origin-ca-issuer-charts",
    "versioningTemplate": "semver"
  }],
  "packageRules": [{
    "matchDepNames": [
      "cert-manager",
      "cloudflare/origin-ca-issuer",
      "origin-ca-issuer"
    ],
    "semanticCommitType": "chore",
    "groupName": "Cert Manager-related dependencies updates",
    "groupSlug": "cert-manager-deps",
    "assignees": ["yannispgs"],
    "enabled": true
  }]
}
